@using BookStore.Models.ViewModels
@model List<BooksViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Modern Interior <span clsas="d-block">Design Studio</span></h1>
                    <p class="mb-4">Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet velit. Aliquam vulputate velit imperdiet dolor tempor tristique.</p>
                    <p><a href="" class="btn btn-secondary me-2">Shop Now</a><a href="#" class="btn btn-white-outline">Explore</a></p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/Assets/images/Books.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Start Hero Section -->

<!-- Start Book Section -->
<div class="product-section">
    <div class="container">
        <div class="row">
            @{
                foreach(BooksViewModel book in Model)
                {
                    <div class="col-12 col-md-4 col-lg-3 mb-5">
                        <div class="product-item">
                            <a asp-controller="Details" asp-action="Index" asp-route-id="@book.Id">
                                <img src="~/Assets/images/@book.PhotoUrl" class="img-fluid product-thumbnail">
                                <h3 class="product-title">@book.Name</h3>
                                <strong class="product-price">@book.Price</strong>
                            </a>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@book.Id">
                                <span class="icon-cross">
                                    <img src="~/Assets/images/cross.svg" class="img-fluid">
                                </span>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
<!-- End Book Section -->
