@model IEnumerable<BookStore.Models.BookModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5 mb-5">
    <h1>Index</h1>

    <p>
        <a class="btn btn-warning" asp-action="Create">Create New</a>
    </p>
    <table style="direction:rtl" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeftQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishYear)
                    </td>
                    <td>
                        <img style="width:50px;" src="~/Assets/Images/@Html.DisplayFor(modelItem => item.PhotoName)" alt="Alternate Text" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeftQuantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="btn-sm btn-info" asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                        <a class="btn-sm btn-primary" asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                        <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>