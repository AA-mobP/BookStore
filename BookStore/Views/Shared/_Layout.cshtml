<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <title>@ViewData["Title"] - مكتبة</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Kufi+Arabic:wght@100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/Assets/favicon.png">

    <!-- Bootstrap CSS -->
    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/Assets/css/tiny-slider.css" rel="stylesheet">
    <link href="~/Assets/css/style.css" rel="stylesheet">
</head>
<body class="noto-kufi-arabic-bookstore">
    <header>
        <!-- Start Header/Navigation -->
        <nav class="custom-navbar navbar navbar navbar-expand-md navbar-dark bg-dark noto-kufi-arabic-bookstore" arial-label="Furni navigation bar">

            <div class="container">
                <a style="direction:rtl" class="navbar-brand" asp-controller="Home" asp-action="Index">مكتبة<span>.</span></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsFurni" aria-controls="navbarsFurni" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsFurni">
                    <ul class="custom-navbar-nav navbar-nav ms-auto mb-2 mb-md-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>
                        <li><a class="nav-link" href="/Personal/aboutus">من نحن</a></li>
                        <li><a class="nav-link" href="/Personal/contactus">تواصل معنا</a></li>
                    </ul>

                    <ul class="custom-navbar-cta navbar-nav mb-2 mb-md-0 ms-5">
                        <partial name="_LoginPartial"></partial>
                        <li><a class="nav-link" asp-controller="Cart" asp-action="Index"><img src="~/Assets/images/cart.svg"></a></li>
                    </ul>
                </div>
            </div>

        </nav>
        <!-- End Header/Navigation -->
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Start Footer Section -->
    <footer class="footer-section noto-kufi-arabic-bookstore">
        <div class="container relative">

            <div class="sofa-img">
                <img src="~/Assets/images/BooksFooter1.png" alt="Image" class="img-fluid">
            </div>

            <div class="row g-5 mb-5">
                <div class="col-lg-4">
                    <div style="direction:rtl" class="mb-4 footer-logo-wrap"><a href="#" class="footer-logo">مكتبة<span>.</span></a></div>
                    <p style="direction:rtl" class="mb-4">مرحبا بزوارنا الأعزاء!</p>
                    <div class="row">
                        <ul style="direction:rtl" class="list-unstyled custom-social">
                            أحمد:
                            <li><a target="_blank" href="https://www.facebook.com/profile.php?id=100024085903654"><span class="fa fa-brands fa-facebook-f"></span></a></li>
                        </ul>
                        <ul style="direction:rtl" class="list-unstyled custom-social">
                            عبدالهادي:
                            <li><a target="_blank" href="https://www.linkedin.com/in/abdelhady-ashrafaamobp/"><span class="fa fa-brands fa-linkedin"></span></a></li>
                        </ul>
                    </div>
                    
                </div>

                <div class="col-lg-8">
                    <div class="row links-wrap">
                        <div class="col-6 col-sm-6 col-md-3">
                            <ul style="direction:rtl" class="list-unstyled">
                                <li><a href="/Personal/AboutUs">من نحن</a></li>
                                <li><a href="/Personal/ContactUs">تواصل معنا</a></li>
                            </ul>
                        </div>


                    </div>
                </div>

            </div>

            <div class="border-top copyright">
                <div class="row pt-4">
                    <div class="col-lg-6">
                        <p class="mb-2 text-center text-lg-start">
                            Copyright &copy;<script>document.write(new Date().getFullYear());</script>. All Rights Reserved.
                        </p>
                    </div>

                </div>
            </div>

        </div>
    </footer>
    <!-- End Footer Section -->


    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/js/tiny-slider.js"></script>
    <script src="~/Assets/js/custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
